pipeline {
   agent {
    label 'Slave'
    }

    tools {
        maven 'Maven'
    }
    
    stages {
        stage("Checkout")
        {
            steps {
                git branch: 'main', url: 'https://github.com/devops-example-projects/maven-webapp.git'
            }
        }
        stage("Clean")
        {
            steps {
                bat 'mvn clean'
            }
        }
        stage("Build")
        {
            steps {
                bat 'mvn compile'
            }
        }
        stage("Test")
        {
            steps {
                bat 'mvn test'
            }
        }
        stage("Package")
        {
            steps {
                bat 'mvn package'
            }
        }
    }


}
